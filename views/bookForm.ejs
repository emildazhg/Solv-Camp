<% include partials/header %>
  <div class="book-form">
    <h1 class="title-primary">Add New Book Reviews</h1>
    <form action="/books" method="POST">
      <div class="form-group row">
        <label for="bookTitle" class="col-sm-2 col-form-label">Book's Title</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="bookTitle" placeholder="Input book's title">
        </div>
      </div>
      <div class="form-group row">
        <label for="bookReview" class="col-sm-2 col-form-label">Review</label>
        <div class="col-sm-10">
          <textarea rows="3" class="form-control" id="bookReview"></textarea>
        </div>
      </div>
      <div class="form-group right">
        <a href="/books" class="btn btn-outline-secondary">Cancel</a>
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>  
  </div>
<% include partials/footer %>