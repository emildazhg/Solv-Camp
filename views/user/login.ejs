<% include ../partials/header %>
  <div class="center">

  <div class="form">
    <h1 class="title-primary">Login</h1>
    <form action="/login" method="POST">
      <div class="form-group row">
        <label for="userName" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
          <input required tyape="text" name="username" class="form-control" id="userName" placeholder="Input your name">
        </div>
      </div>
      <div class="form-group row">
        <label for="userPassword" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
          <input required type="password" name="password" class="form-control" id="userPassword" min=5>
        </div>
      </div>
      <div class="form-group right">
        <button type="submit" class="btn btn-primary">Login</button>
      </div>
    </form>  
  </div>
  <p class="center">Don't have any account? <a href="/register">Register Here!</a></p>
  </div>
<% include ../partials/footer %>